#!/bin/bash
RED='\033[1;31m'        # ${RED}
Yellow='\033[1;33m' # ${Yellow}
Blue='\033[1;34m'       # ${Blue}
Green='\033[1;32m'      # ${Green}
NC='\033[0m'            # ${NC}
echo -e "${Blue}
\$\$\$\$\$\$\$\   \$\$\$\$\$\$\  \$\$\             \$\$\   \$\$\            \$\$\$\$\$\$\   \$\$\$\$\$\$\             \$\$\$\$\$\$\  
\$\$  __\$\$\ \$\$\$ __\$\$\ \$\$ |            \$\$ |\$\$\$\$ |          \$\$ ___\$\$\ \$\$  __\$\$\           \$\$  __\$\$\ 
\$\$ |  \$\$ |\$\$\$\$\ \$\$ |\$\$ |  \$\$\  \$\$\$\$\$\$\$ |\_\$\$ |          \_/   \$\$ |\$\$ /  \$\$ |\$\$\$\$\$\$\$\  \$\$ /  \__|
\$\$\$\$\$\$\$\ |\$\$\\$\$\\$\$ |\$\$ | \$\$  |\$\$  __\$\$ |  \$\$ |            \$\$\$\$\$ / \$\$\$\$\$\$\$\$ |\$\$  __\$\$\ \$\$ |\$\$\$\$\ 
\$\$  __\$\$\ \$\$ \\$\$\$\$ |\$\$\$\$\$\$  / \$\$ /  \$\$ |  \$\$ |            \___\$\$\ \$\$  __\$\$ |\$\$ |  \$\$ |\$\$ |\_\$\$ |
\$\$ |  \$\$ |\$\$ |\\$\$\$ |\$\$  _\$\$<  \$\$ |  \$\$ |  \$\$ |          \$\$\   \$\$ |\$\$ |  \$\$ |\$\$ |  \$\$ |\$\$ |  \$\$ |
\$\$\$\$\$\$\$  |\\$\$\$\$\$\$  /\$\$ | \\$\$\ \\$\$\$\$\$\$\$ |\$\$\$\$\$\$\         \\$\$\$\$\$\$  |\$\$ |  \$\$ |\$\$ |  \$\$ |\\$\$\$\$\$\$  |
\_______/  \______/ \__|  \__| \_______|\______|\$\$\$\$\$\$\  \______/ \__|  \__|\__|  \__| \______/ 
                                                \______|                                        ${NC}
            ${RED}This script is made in China${NC}                                                          
                                                                                                "

file=$1
while read line
do
        echo -e "${Green}Scaner for${NC} ${Yellow}${line}${NC}:"
        k=$line
        for i in {1..65535}
        do
               (nc -nv ${k} ${i} -w1 2>&1 | grep succeed | awk '{print $4}' | tr "\n" ","&)
        done
done < $file
echo -n "${Blue}Great, ${NC}${Yellow}You can give it to nmap!${NC}"
